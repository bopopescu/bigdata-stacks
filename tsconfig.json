{
    "compilerOptions": {
        "module": "system",
        "moduleResolution": "classic",
        "declaration": true,
        "target": "ES5",
        "typeRoots": [
          "./node_modules/@types"
        ],
        "noImplicitAny": false,
        "noImplicitReturns":false,
        "noImplicitThis":false,
        "noImplicitUseStrict":false,
        "noUnusedLocals":false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noStrictGenericChecks": true,
        "sourceMap": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ]
}